---
import { Image } from "astro:assets";
import type { Item } from "../types/config";

type Props = Item;

const { title, company, date } = Astro.props;
---

<div  class="py-3 flex items-center justify-between border rounded-xl p-3">
  <div class="flex items-center gap-4">
    <Image
      src={company.image}
      alt={company.name}
      width={40}
      height={40}
      class="rounded-full w-[40px] h-[40px] object-cover"
    />
    <div>
      <h3 class="font-medium">{title}</h3>
      <p class="text-sm opacity-60">{company.name}</p>
    </div>
  </div>
  <p class="text-sm opacity-60">{date}</p>
